<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MultiScreenActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layoutPlayWnd"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#ff000000">

            <com.lib.funsdk.support.widget.FunVideoView
                android:id="@+id/funVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textVideoStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#40000000"
                android:textColor="#ffffffff"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutPlayWnd_2"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#ff000000"
            android:layout_marginTop="20dp">

            <com.lib.funsdk.support.widget.FunVideoView
                android:id="@+id/funVideoView_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textVideoStat_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#40000000"
                android:textColor="#ffffffff"
                android:textSize="14dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>