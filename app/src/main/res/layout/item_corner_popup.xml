<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutRoot">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_corners_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/pop_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text_size"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:text="reset_tour"
            android:textColor="@color/whitebg_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/pop_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text_size"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:text="delete_tour"
            android:textColor="@color/whitebg_text"/>
    </LinearLayout>
    <TextView
        android:id="@+id/pop_item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corners_bg"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/middle_text_size"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:text="cancel"
        android:textColor="@color/whitebg_text"
        />


</LinearLayout>