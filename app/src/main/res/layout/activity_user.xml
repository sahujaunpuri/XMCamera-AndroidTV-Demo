<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="5dp"
        android:text="1.1 Register" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/btn_register"
        android:layout_marginHorizontal="5dp"
        android:text="1.2 Login" />

    <Button
        android:id="@+id/btn_modify"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/btn_login"
        android:layout_marginHorizontal="5dp"
        android:text="1.3 Modify" />

    <Button
        android:id="@+id/btn_forgot"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/btn_modify"
        android:layout_marginHorizontal="5dp"
        android:text="1.4 Forgot" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/btn_forgot"
        android:layout_marginHorizontal="5dp"
        android:text="1.5 User Info" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/btn_info"
        android:layout_marginHorizontal="5dp"
        android:text="1.6 Save Device Pass Native" />

</RelativeLayout>
